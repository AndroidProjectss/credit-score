<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.credit_score.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.credit_score.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.credit_score.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
        
    <fragment
        android:id="@+id/navigation_tunduk"
        android:name="com.example.credit_score.ui.tunduk.TundukFragment"
        android:label="@string/title_tunduk"
        tools:layout="@layout/fragment_tunduk" />
        
    <fragment
        android:id="@+id/navigation_scanner"
        android:name="com.example.credit_score.ui.scanner.PassportScannerFragment"
        android:label="@string/title_scanner"
        tools:layout="@layout/fragment_passport_scanner" />
</navigation>